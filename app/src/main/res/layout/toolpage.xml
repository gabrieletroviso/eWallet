<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todPageCont"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todayBtnBar"
            android:layout_width="411dp"
            android:layout_height="96dp"
            android:layout_marginTop="18dp"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolViewPage"
            app:layout_constraintVertical_bias="0.964">

            <ImageButton
                android:id="@+id/todToolBtn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/accbalance" />

            <ImageButton
                android:id="@+id/statisticsToolBtn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="83dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="98dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/todToolBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/barchar" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/toolViewPage"
            android:layout_width="match_parent"
            android:layout_height="633dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>